<Window x:Class="SmallFactoryWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmallFactoryWPF"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        FontSize="18"
        Title="Small Factory" Height="600" Width="800" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <TabControl>
            <TabItem Header="Магазин">
                <Frame Name="FShop" />
            </TabItem>
            <TabItem Header="Станки">
                <Frame Name="FMachines" />
            </TabItem>
        </TabControl>
    </Grid>
</Window>
